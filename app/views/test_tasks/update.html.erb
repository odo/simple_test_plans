<div class="active-scaffold">
  <div class="update-view <%= "#{params[:controller]}-view" %> view">
    <% if active_scaffold_config.update.nested_links and active_scaffold_config.action_links.any? {|link| link.type == :member } -%>
    <%= render :partial => 'update_actions', :locals => {:record => @record, :url_options => params_for(:action => :list, :id => @record.id)} %>
    <% end -%>
    <%= render :partial => 'update_form' -%>
  </div>
</div>
<% if !(@record.test_group.test_run.test_context.name =~ /deploy/i) and search = @record.test_group.test_run.search %>
  <% unless session["auto_submitted_test_run_#{@record.test_group.test_run.id}"]
    session["auto_submitted_test_run_#{@record.test_group.test_run.id}"] = true %>
    <script language=javascript>
      setTimeout("document.edit_form.submit()",1000)
    </script>
  <% end  %>
  <div style="position: absolute;right:100px; top:175px;background-color:#FFFFCC;padding-left:20px;padding-right:20px;">
    <dl>
      <dt style="font-size: 15px;font-weight:bold">
        <% if search.is_a?(FlightSearch) %>
          <%= "#{search.origin.code} - #{search.destination.code}#{search.one_way? ? '' : ' - ' + search.origin.code }" %>
        <% else %>
          <%= search.location %>
        <% end %>
      </dt>
      <dt>
        <% if search.is_a?(FlightSearch) %>
          <%= "#{search.leaves_on}#{search.one_way? ? '' : ' - ' + search.returns_on.to_s }" %>
        <% else %>
          <%= "#{search.starts_on} - #{search.ends_on} (#{search.ends_on-search.starts_on} days)" %>
        <% end %>
      </dt>
      <dt>
        <% if search.is_a?(FlightSearch) %>
          <%= "adults: #{search.adults}, children: #{search.children}, infants: #{search.infants}, comfort: #{search.comfort}" %>
        <% else %>
          <%= search.room_configuration %>
        <% end %>
      </dt>
      <dt>
        <% unless @record.test_group.message.blank? %>
          Test for:
          <font style="font-weight:bold"><%= @record.test_group.message %></font>
        <% end %>
      </dt>
    </dl>
    <dl>
      <dt>
        <% form_tag test_task_url_params_search(search), :target => "_blank", :name => 'edit_form' do %>
          <%= submit_tag 'Redo Search' %>
        <% end %>
      </dt>
    </dl>
  </div>
<% end %>
